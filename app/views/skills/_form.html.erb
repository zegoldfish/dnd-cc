<%= form_for(@skill) do |f| %>
  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% @skill.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :skill_name %><br>
    <%= f.text_field :skill_name %>
  </div>

  <div class="field">
    <%= f.label :ability_score_id, "Governing Ability Score" %><br>
    <select id="skill_ability_score_id" name="skill[ability_score_id]">
      <% AbilityScore.all.each do |a| %>
        <option <%= a.id == @skill.ability_score_id ? "selected='selected'" : nil %> value="<%= a.id %>"><%= a.ability_score_name %></option>
      <% end %>
    </select>
  </div>  

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
